<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del EditText -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#7CD3D3D2" /> <!-- Color del fondo -->
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#494747" /> <!-- Color del borde -->
            <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp" /> <!-- Relleno interno -->
        </shape>
    </item>
</layer-list>